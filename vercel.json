{
    "version": 2,
    "builds": [
      {
        "src": "app.js", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.js"
      }
    ],
    "scripts": {
      "job": "node job-script.js"
    },
    "crons": [
      {
        "path": "/",
        "schedule": "* * * * *" 
      },
      {
        "path": "/updateData/lotoFacil",
        "schedule": "0 22 * * *"
      },
      {
        "path": "/updateData/megaSena",
        "schedule": "30 22 * * 2,4,6"
      },
      {
        "path": "/updateData/quina",
        "schedule": "0 23 * * 1-6"
      }
    ]
  }